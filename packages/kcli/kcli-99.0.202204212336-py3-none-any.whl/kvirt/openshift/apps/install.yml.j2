{% if target_namespace != 'openshift-operators' %}
apiVersion: v1
kind: Namespace
metadata:
  labels:
    openshift.io/cluster-monitoring: "true"
  name: {{ target_namespace }}
---
apiVersion: operators.coreos.com/v1
kind: OperatorGroup
metadata:
  name: {{ name }}-operatorgroup
  namespace: {{ target_namespace }}
spec:
  targetNamespaces:
  - {{ target_namespace }}
---
{% endif %}
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: {{ name }}
  namespace: {{ target_namespace }}
spec:
  channel: "{{ channel }}"
  name: {{ name }}
  source: {{ source | default('redhat-operators') }}
  sourceNamespace: openshift-marketplace
{% if csv is defined %}
  startingCSV: {{ csv }}
{% endif %}
{% if installplan is defined %}
  installPlanApproval: {{ installplan }}
{% endif %}
