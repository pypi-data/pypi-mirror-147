<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="becomecooperator" inherit_id="easy_my_coop_website.becomecooperator" name="Become cooperator">
            <!-- Remove placeholders -->
            <xpath expr="//input[@name='email']" position="attributes">
                <attribute name="placeholder"></attribute>
            </xpath>
            <xpath expr="//input[@name='confirm_email']" position="attributes">
                <attribute name="placeholder"></attribute>
            </xpath>
            <xpath expr="//div[@name='my_account_link_container'][@class='text-center']" position="attributes">
              <attribute name="hidden">1</attribute>
            </xpath>
            <xpath expr="//div[@name='my_account_link_container'][@t-attf-class='form-group']" position="attributes">
              <attribute name="hidden">1</attribute>
            </xpath>
        </template>
    </data>
</odoo>
