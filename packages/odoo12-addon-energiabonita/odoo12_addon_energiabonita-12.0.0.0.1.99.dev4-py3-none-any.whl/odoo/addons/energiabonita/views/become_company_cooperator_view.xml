<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <template id="iban_template_es" inherit_id="easy_my_coop_es_website.iban_template_es">
        <xpath expr="//input[@name='iban']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//label[@for='iban']" position="after">
          <div class="col-md-7 col-sm-8">
            <p style="font-size: 0.7rem">NÃºmero de Cuenta Bancaria Internacional (Ejemplo IBAN: ES11 2222 3333 4444 5555 6666).</p>
          </div>
        </xpath>
        <xpath expr="//input[@name='vat']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
      </template>
      <template id="contact_template" inherit_id="easy_my_coop_website.contact_template">
        <!-- Hide language select -->
        <xpath expr="//div[@name='lang_container']" position="attributes">
          <attribute name="hidden">1</attribute>
        </xpath>
      </template>
      <template id="address_template" inherit_id="easy_my_coop_website.address_template">
        <!-- Hide country select -->
        <xpath expr="//div[@name='country_container']" position="attributes">
          <attribute name="hidden">1</attribute>
        </xpath>
      </template>
      <template id="shares_template" inherit_id="easy_my_coop_website.shares_template">
        <xpath expr="//div[@name='share_div']" position="after">
          <div id="sepa_approved" t-attf-class="form-group" t-if="display_sepa_approval" >
            <label class="col-md-3 col-sm-4 control-label" for="sepa_approved">SEPA approved</label>
            <div class="col-md-9 col-sm-8">
              <div class="checkbox">
                <label>
                  <input type="checkbox"
                    name="sepa_approved"
                    t-att-checked="sepa_approved"/>
                  <t t-raw="sepa_approval_text"/>
                </label>
              </div>
            </div>
          </div>
        </xpath>
      </template>
      <template id="becomecompanycooperator" inherit_id="easy_my_coop_website.becomecompanycooperator">
            <!-- Remove placeholders -->
        <xpath expr="//input[@name='company_name']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//input[@name='company_email']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//input[@name='email']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//input[@name='confirm_email']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
      </template>
      <template id="contact_template" inherit_id="easy_my_coop_website.contact_template">
        <xpath expr="//input[@name='firstname']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//input[@name='lastname']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//input[@name='birthdate']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//input[@name='phone']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
      </template>
      <template id="address_template" inherit_id="easy_my_coop_website.address_template">
        <xpath expr="//input[@name='address']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//input[@name='zip_code']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
        <xpath expr="//input[@name='city']" position="attributes">
          <attribute name="placeholder"></attribute>
        </xpath>
      </template>
    </data>
</odoo>
